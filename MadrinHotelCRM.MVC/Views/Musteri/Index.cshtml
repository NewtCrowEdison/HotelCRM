@model List<MadrinHotelCRM.DTO.DTOModels.MusteriDTO>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Müşteri Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MusteriId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.MusteriId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.MusteriId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>