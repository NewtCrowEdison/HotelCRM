@model MadrinHotelCRM.DTO.DTOModels.MusteriDTO

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Madrin Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar-custom {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            z-index: 20;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(6px);
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom px-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">☰ MENÜ</a>
            <div class="mx-auto text-white fw-bold fs-4">Madrin Hotel</div>
            <div>
                <button class="btn btn-outline-light me-2">BİZE ULAŞIN</button>
                <button class="btn btn-light">REZERVASYON</button>
            </div>
        </div>
    </nav>

    <!-- Müşteri Detay -->
    <section class="py-5" style="background-color: #ffffff;">
        <div class="container">
            <h2 class="fw-bold text-center mb-4">@ViewData["Title"]</h2>

            <dl class="row">
                <dt class="col-sm-3">Ad Soyad</dt>
                <dd class="col-sm-9">@Model.Ad @Model.Soyad</dd>

                <dt class="col-sm-3">TC / Pasaport</dt>
                <dd class="col-sm-9">@(Model.YabanciUyrukluMu ? Model.PasaportNo : Model.TcNo)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.TelNo</dd>

                <dt class="col-sm-3">Doğum Tarihi</dt>
                <dd class="col-sm-9">@Model.DogumTarihi.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">Cinsiyet</dt>
                <dd class="col-sm-9">@Model.Cinsiyet</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.Adres</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.MusteriId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </section>

    <!-- Hakkımızda -->
    <section class="py-3" style="background-color: #d6dbd0;">
        <div class="container text-center">
            <h2 class="display-6 fw-bold mb-2">Mükemmelliğin <em>Kalp</em> Notası</h2>
            <p class="lead mx-auto mb-3" style="max-width: 700px; font-size: 1rem;">
                Madrin Hotel olarak 2025 yılında lüks tatilin sınır tanımayan özgünlüğünü sizlerle buluşturduk.
                Konaklama deneyimini bir hizmetten öte, ilham kaynağı kılmayı amaçlıyoruz.
            </p>
            <a href="/Home/Hakkimizda" class="btn btn-outline-dark mt-2 px-3 py-1">
                Madrin Hotel’i Keşfedin →
            </a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="text-white pt-5 pb-3" style="background-color: #2c2c2c;">
        <div class="container">
            <div class="row">
                <!-- Logo / Otel adı -->
                <div class="col-md-4 mb-4">
                    <h4 class="fw-bold">Madrin Hotel</h4>
                    <p class="small">Lüksü, konforu ve huzuru bir araya getiriyoruz. Tatilinizi unutulmaz kılmak için buradayız.</p>
                </div>

                <!-- Menü -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold">Hızlı Erişim</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Hakkimizda" class="text-white text-decoration-none">Hakkımızda</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Odalar</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Rezervasyon</a></li>
                        <li><a href="#" class="text-white text-decoration-none">İletişim</a></li>
                    </ul>
                </div>

                <!-- İletişim -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold">İletişim</h5>
                    <p class="mb-1"><i class="bi bi-telephone-fill me-2"></i> +90 212 000 00 00</p>
                    <p class="mb-1"><i class="bi bi-envelope-fill me-2"></i> info@madrinhotel.com</p>
                    <p><i class="bi bi-geo-alt-fill me-2"></i> Bodrum, Muğla / Türkiye</p>

                    <!-- Sosyal ikonlar -->
                    <div class="d-flex gap-3 mt-2">
                        <a href="#" class="text-white fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-twitter-x"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-light opacity-25">
            <div class="text-center small">© 2025 Madrin Hotel. Tüm hakları saklıdır.</div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
