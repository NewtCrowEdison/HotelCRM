@using MadrinHotelCRM.DTO.DTOModels
@model MusteriDTO

<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Müşteri Kaydı - Madrin Hotel</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
	<style>
		body {
			font-family: 'Segoe UI', sans-serif;
			background-color: #f4f6f5;
		}

		.navbar-custom {
			position: absolute;
			top: 0;
			left: 0;
			width: 100vw;
			z-index: 20;
			background: rgba(0, 0, 0, 0.3);
			backdrop-filter: blur(6px);
		}

		.modal-body a {
			color: #000;
			font-style: italic;
			font-weight: 400;
			text-decoration: underline;
		}

			.modal-body a:hover {
				color: #3f554a;
				text-decoration: none;
			}

		.form-section {
			background: white;
			padding: 40px;
			border-radius: 15px;
			box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
			margin-top: 100px;
		}
		/*menü çubuğu style*/
		.offcanvas-custom-bg {
			background-color: #e7e9e2 !important; /* Yumuşak yeşil/gri ton */
			color: #000;
		}

			.offcanvas-custom-bg a.nav-link {
				color: #2c2c2c;
				font-weight: 500;
			}

				.offcanvas-custom-bg a.nav-link:hover {
					color: #000;
					text-decoration: underline;
				}

		footer {
			background-color: #2c2c2c;
		}

			footer a {
				color: #fff;
				text-decoration: none;
			}

				footer a:hover {
					text-decoration: underline;
				}
	</style>
</head>
<body>
	<!-- NAVBAR -->
	<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top px-4">
		<div class="container-fluid">
			<a class="navbar-brand" href="#" data-bs-toggle="offcanvas" data-bs-target="#solMenu">☰ MENÜ</a>
			<div class="mx-auto text-white fw-bold fs-4">Madrin Hotel</div>
			<div>
				<button class="btn btn-outline-light me-2" data-bs-toggle="modal" data-bs-target="#iletisimModal">BİZE ULAŞIN</button>
				<a href="/Home/MusteriKaydet" class="btn btn-light">REZERVASYON</a>
			</div>
		</div>
	</nav>

	<!-- İLETİŞİM MODAL -->
	<div class="modal fade" id="iletisimModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content px-4 py-4 rounded-3" style="border: none;">
				<div class="modal-header border-0 position-relative">
					<h5 class="modal-title text-center w-100 fst-italic" style="color:#000;">Bize Ulaşın</h5>
					<button type="button" class="btn-close position-absolute top-0 end-0 mt-2 me-2" data-bs-dismiss="modal" aria-label="Kapat"></button>
				</div>

				<div class="modal-body text-center">
					<div class="mb-4">
						<div class="fw-bold text-secondary">MADRIN HOTEL:</div>
						<a href="tel:+902120000000" class="d-block mb-1 text-decoration-underline">444 62 99</a>
						<a href="mailto:book@madrinhotel.com" class="d-block text-decoration-underline">book@madrinhotel.com</a>
					</div>

					<hr style="border-top: 1px solid #ccc;" />

					<div class="text-uppercase small text-muted mb-3 mt-3">Diğer Sorularınız:</div>
					<button class="btn btn-outline-dark px-4" onclick="window.location.href='/Iletisim/Index'">
						İLETİŞİM →
					</button>
				</div>
			</div>
		</div>
	</div>

	<!-- YAN MENÜ  -->
	<div class="offcanvas offcanvas-start offcanvas-custom-bg" tabindex="-1" id="solMenu">
		<div class="offcanvas-header justify-content-end">
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
		</div>
		<div class="offcanvas-body">
			<ul class="list-unstyled">
				<li><a href="/" class="nav-link">Anasayfa</a></li>
				<li><a href="/Home/Hakkimizda" class="nav-link">Hakkımızda</a></li>
				<li><a href="/Odalar" class="nav-link">Odalar</a></li>
				<li><a href="#" class="nav-link" data-bs-toggle="modal" data-bs-target="#iletisimModal">İletişim</a></li>
			</ul>
		</div>
	</div>


	<!-- FORM -->
	<div class="container form-section">
		<h2 class="text-center mb-4">Müşteri Kaydı</h2>
		<form asp-action="MusteriKaydet" method="post" class="row g-3">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

			<div class="col-md-4">
				<label asp-for="TcNo" class="form-label">T.C. Kimlik No</label>
				<input asp-for="TcNo" class="form-control" maxlength="11" />
				<span asp-validation-for="TcNo" class="text-danger"></span>
			</div>

			<div class="col-md-6">
				<label asp-for="Ad" class="form-label">Ad</label>
				<input asp-for="Ad" class="form-control" maxlength="50" />
				<span asp-validation-for="Ad" class="text-danger"></span>
			</div>

			<div class="col-md-6">
				<label asp-for="Soyad" class="form-label">Soyad</label>
				<input asp-for="Soyad" class="form-control" maxlength="50" />
				<span asp-validation-for="Soyad" class="text-danger"></span>
			</div>

			<div class="col-md-4">
				<label asp-for="TelNo" class="form-label">Telefon</label>
				<input asp-for="TelNo" class="form-control" maxlength="20" />
				<span asp-validation-for="TelNo" class="text-danger"></span>
			</div>

			<div class="col-md-4">
				<label asp-for="DogumTarihi" class="form-label">Doğum Tarihi</label>
				<input asp-for="DogumTarihi" type="date" class="form-control" />
				<span asp-validation-for="DogumTarihi" class="text-danger"></span>
			</div>

			<div class="col-md-4">
				<label asp-for="Email" class="form-label">Email</label>
				<input asp-for="Email" type="email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="col-md-4">
				<label asp-for="Cinsiyet" class="form-label">Cinsiyet</label>
				<select asp-for="Cinsiyet" class="form-select" asp-items="Html.GetEnumSelectList<MadrinHotelCRM.Entities.Enums.Cinsiyet>()">
					<option value="">-- Seçin --</option>
				</select>
				<span asp-validation-for="Cinsiyet" class="text-danger"></span>
			</div>

			<div class="col-md-8">
				<label asp-for="Adres" class="form-label">Adres</label>
				<textarea asp-for="Adres" class="form-control" rows="3"></textarea>
				<span asp-validation-for="Adres" class="text-danger"></span>
			</div>

			<div class="col-12">
				<button type="submit" class="btn btn-dark px-4 py-2">Kaydı Tamamla</button>
			</div>
		</form>
	</div>

	<!-- FOOTER -->
	<footer class="text-white pt-5 pb-3 mt-5">
		<div class="container">
			<div class="row">
				<div class="col-md-4 mb-4">
					<h4 class="fw-bold">Madrin Hotel</h4>
					<p class="small">Lüksü, konforu ve huzuru bir araya getiriyoruz.</p>
				</div>
				<div class="col-md-4 mb-4">
					<h5 class="fw-semibold">Hızlı Erişim</h5>
					<ul class="list-unstyled">
						<li><a href="/Home/Hakkimizda">Hakkımızda</a></li>
						<li><a href="/Odalar">Odalar</a></li>
						<li><a href="/Home/MusteriKaydet">Rezervasyon</a></li>
						<li><a href="#" class="nav-link" data-bs-toggle="modal" data-bs-target="#iletisimModal">İletişim</a></li>
					</ul>
				</div>
				<div class="col-md-4 mb-4">
					<h5 class="fw-semibold">İletişim</h5>
					<p><i class="bi bi-telephone-fill me-2"></i> +90 212 000 00 00</p>
					<p><i class="bi bi-envelope-fill me-2"></i> info@madrinhotel.com</p>
					<p><i class="bi bi-geo-alt-fill me-2"></i> Bodrum, Türkiye</p>
				</div>
			</div>
			<hr class="border-light opacity-25">
			<div class="text-center small">© 2025 Madrin Hotel. Tüm hakları saklıdır.</div>
		</div>
	</footer>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>