@model MadrinHotelCRM.DTO.DTOModels.MusteriDTO

@{
    ViewData["Title"] = "Yeni Müşteri Ekle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yeni Müşteri Ekle - Madrin Hotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar-custom {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            z-index: 20;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(6px);
        }

        .video-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.5));
            z-index: 1;
        }

        .carousel-caption {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(6px);
            padding: 2rem 3rem;
            border-radius: 10px;
            z-index: 2;
        }

            .carousel-caption h1 {
                font-size: 3.5rem;
                font-style: italic;
                color: #fff;
            }

            .carousel-caption p {
                font-size: 1.2rem;
                color: #f0f0f0;
            }

        .scroll-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
            background-color: rgba(0, 0, 0, 0.4);
            border: none;
            color: white;
            padding: 0.5rem 1rem;
            font-size: 1.5rem;
            border-radius: 50%;
            cursor: pointer;
        }

            .scroll-btn.left {
                left: 0;
            }

            .scroll-btn.right {
                right: 0;
            }

            .scroll-btn:hover {
                background-color: rgba(0, 0, 0, 0.6);
            }

        #galleryContainer img {
            transition: transform 0.3s ease;
        }

            #galleryContainer img:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom px-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">☰ MENÜ</a>
            <div class="mx-auto text-white fw-bold fs-4">Madrin Hotel</div>
            <div>
                <button class="btn btn-outline-light me-2">BİZE ULAŞIN</button>
                <button class="btn btn-light">REZERVASYON</button>
            </div>
        </div>
    </nav>

    <!-- Kart Blokları -->
    <section class="info-section py-5" style="background-color: #e7e9e2;">
        <div class="container">
            <!-- ... önceki kart blokları burada ... -->
        </div>
    </section>

    <!-- Yeni Müşteri Ekle Bölümü -->
    <section class="py-5" style="background-color: #ffffff;">
        <div class="container">
            <h2 class="fw-bold text-center mb-4">@ViewData["Title"]</h2>
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Soyad" class="form-label"></label>
                            <input asp-for="Soyad" class="form-control" />
                            <span asp-validation-for="Soyad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TcNo" class="form-label"></label>
                            <input asp-for="TcNo" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasaportNo" class="form-label"></label>
                            <input asp-for="PasaportNo" class="form-control" />
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="YabanciUyrukluMu" class="form-check-input" type="checkbox" />
                            <label asp-for="YabanciUyrukluMu" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TelNo" class="form-label"></label>
                            <input asp-for="TelNo" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DogumTarihi" class="form-label"></label>
                            <input asp-for="DogumTarihi" class="form-control" type="date" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cinsiyet" class="form-label"></label>
                            <select asp-for="Cinsiyet" class="form-select"
                                    asp-items="Html.GetEnumSelectList<MadrinHotelCRM.Entities.Enums.Cinsiyet>()">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Adres" class="form-label"></label>
                            <textarea asp-for="Adres" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary mt-3 ms-2">Geri Dön</a>
            </form>
        </div>
    </section>
    <!-- Hakkımızda Bölümü -->
    <section class="py-3" style="background-color: #d6dbd0;">
        <div class="container text-center">
            <h2 class="display-6 fw-bold mb-2">Mükemmelliğin <em>Kalp</em> Notası</h2>
            <p class="lead mx-auto mb-3" style="max-width: 700px; font-size: 1rem;">
                Madrin Hotel olarak 2025 yılında lüks tatilin sınır tanımayan özgünlüğünü sizlerle buluşturduk.
                Konaklama deneyimini bir hizmetten öte, ilham kaynağı kılmayı amaçlıyoruz.
            </p>
            <a href="/Home/Hakkimizda" class="btn btn-outline-dark mt-2 px-3 py-1">
                Madrin Hotel’i Keşfedin →
            </a>
        </div>
    </section>

    <!-- Footer -->
    <!-- FOOTER -->
    <footer class="text-white pt-5 pb-3" style="background-color: #2c2c2c;">
        <div class="container">
            <div class="row">
                <!-- Logo / Otel adı -->
                <div class="col-md-4 mb-4">
                    <h4 class="fw-bold">Madrin Hotel</h4>
                    <p class="small">Lüksü, konforu ve huzuru bir araya getiriyoruz. Tatilinizi unutulmaz kılmak için buradayız.</p>
                </div>

                <!-- Menü -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold">Hızlı Erişim</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Hakkimizda" class="text-white text-decoration-none">Hakkımızda</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Odalar</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Rezervasyon</a></li>
                        <li><a href="#" class="text-white text-decoration-none">İletişim</a></li>
                    </ul>
                </div>

                <!-- İletişim -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold">İletişim</h5>
                    <p class="mb-1"><i class="bi bi-telephone-fill me-2"></i> +90 212 000 00 00</p>
                    <p class="mb-1"><i class="bi bi-envelope-fill me-2"></i> info@madrinhotel.com</p>
                    <p><i class="bi bi-geo-alt-fill me-2"></i> Bodrum, Muğla / Türkiye</p>

                    <!-- Sosyal ikonlar -->
                    <div class="d-flex gap-3 mt-2">
                        <a href="#" class="text-white fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-twitter-x"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-light opacity-25">
            <div class="text-center small">© 2025 Madrin Hotel. Tüm hakları saklıdır.</div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
