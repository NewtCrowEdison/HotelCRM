@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container-fluid">
    <div class="row">

        <!-- SOL MENÜ -->
        <div class="col-md-3 bg-light vh-100 shadow-sm">
            <h4 class="mt-4 text-center text-success">Admin Panel</h4>
            <ul class="list-group list-group-flush mt-4">
                <li class="list-group-item list-group-item-action" onclick="loadPanel('Odalar')">🛏️ Oda Yönetimi</li>
                <li class="list-group-item list-group-item-action" onclick="loadPanel('Personel')">👤 Personel Yönetimi</li>
                <li class="list-group-item list-group-item-action" onclick="loadPanel('EkPaketler')">📦 Ek Paketler</li>
                <li class="list-group-item list-group-item-action" onclick="loadPanel('Faturalar')">🧾 Faturalar</li>
                <li class="list-group-item list-group-item-action" onclick="loadPanel('Raporlar')">📊 Raporlar</li>
            </ul>
        </div>

        <!-- SAĞ PANEL AJAX İLE YÜKLENECEK -->
        <div class="col-md-9 p-4" id="panelContent">
            <h5 class="text-muted">Hoş geldin Admin </h5>
            <p>Sol menüden bir bölüm seçerek işlem yapmaya başlayabilirsin.</p>
        </div>
        <!-- Çıkış Yap Butonu -->
        <form asp-controller="Auth" asp-action="Cikis" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger">Çıkış Yap</button>
        </form>
    </div>
</div>

<!-- AJAX KODU -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function loadPanel(GetAllOdalar) {
            $("#panelContent").load(`/AdminPanel/${GetAllOdalar}`);
        }
    </script>
}
